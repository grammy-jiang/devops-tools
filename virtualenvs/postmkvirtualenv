#!/bin/bash
# This hook is sourced after a new virtualenv is activated.

# data science
pip install ipython
pip install jupyter
pip install ipykernel
# http://help.pythonanywhere.com/pages/IPythonNotebookVirtualenvs
# python -m ipykernel install --user --name={{virtualenv name}}

pip install numpy
pip install cupy
pip install pandas

pip install sympy
pip install nose

pip install scipy
